    stages {
        // Epic: lancement - mars 2050
        stage('Mettre à jour la plage de dates') {
            steps {
                // Story: mettre à jour la plage de dates pour inclure les dates du lancement de mars 2050.
                echo 'Mise à jour de la plage de dates pour inclure les dates du lancement de mars 2050'
//                git branch: 'agile', url: 'https://github.com/your-repo/your-project.git', credentialsId: "${GIT_CREDENTIALS}"
            }
        }
        
        stage('Réduire le temps de chargement des listes de vols') {
            steps {
                // Story: réduire le temps de chargement des listes de vols demandées à < 0,45 seconde
                echo 'Réduction du temps de chargement des listes de vols demandées à < 0,45 seconde'
            }
        }
        
        stage('Promouvoir les soldes d\'été pour Saturne') {
            steps {
                // Story: promouvoir les soldes d'été pour Saturne sur la page de confirmation des réservations en première classe.
                echo 'Promotion des soldes d\'été pour Saturne sur la page de confirmation des réservations en première classe'
            }
        }
        
        // Simultanément, les équipes de propulsion pourraient contribuer à la même epic avec ces stories :
        
        stage('Maintenir la concentration des réservoirs de carburant') {
            steps {
                // Story: maintenir la concentration des réservoirs de carburant à plus de 250 PPM au lancement
                echo 'Maintien de la concentration des réservoirs de carburant à plus de 250 PPM au lancement'
            }
        }
        
        stage('Réduire la consommation de carburant') {
            steps {
                // Story: réduire la consommation globale de carburant de 1 %.
                echo 'Réduction de la consommation globale de carburant de 1 %'
            }
        }
        
        stage('Embaucher un nouvel ingénieur en propulsion') {
            steps {
                // Story: embaucher un nouvel ingénieur en propulsion pour remplacer Gary. #garygate2050
                echo 'Embauche d\'un nouvel ingénieur en propulsion pour remplacer Gary. #garygate2050'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded.'
        }
        failure {
            echo 'Pipeline failed.'
